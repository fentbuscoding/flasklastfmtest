# Last.fm API Configuration
# Get your API key and secret from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_API_SECRET=your_lastfm_api_secret_here

# Flask Configuration
# Generate a secure secret key for session management
# You can use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_super_secret_key_here_generate_a_random_one

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (if you add database support later)
# DATABASE_URL=sqlite:///lastfm_scrobbler.db
# DATABASE_URL=postgresql://username:password@localhost/lastfm_scrobbler

# Redis Configuration (for session storage or caching)
# REDIS_URL=redis://localhost:6379/0

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Application Configuration
APP_NAME=Last.fm Scrobbler
APP_VERSION=1.0.0

# Security Configuration
# Set to True in production
SECURE_COOKIES=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CORS Configuration (if needed for API access)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email Configuration (for notifications, if implemented)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password

# Monitoring and Analytics (if implemented)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# File Upload Configuration (if implemented)
# MAX_CONTENT_LENGTH=16777216  # 16MB
# UPLOAD_FOLDER=uploads